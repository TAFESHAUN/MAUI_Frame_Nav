<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUI_Frame_Nav.Views.UpdateProduct">

    <StackLayout Padding="10" BackgroundColor="MediumPurple">
        <Label Text="Update Product" FontAttributes="Bold" FontSize="Large" HorizontalOptions="Center" Margin="0,20,0,20" />
        <Label x:Name="ProductIdLabel" Text="Product ID" />
        <Entry Focused="Entry_Focused" x:Name="ProductNameEntry" Placeholder="Product Name" />
        <Entry Focused="Entry_Focused" x:Name="PriceEntry" Placeholder="Price" />
        <Entry Focused="Entry_Focused" x:Name="CodeEntry" Placeholder="Code" />
        <Button Text="Update" Clicked="OnUpdateClicked" />
    </StackLayout>
</ContentPage>
