<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUI_Frame_Nav.Components.ProductDetailsView">
    <StackLayout>
        <Label Text="Product Details" FontAttributes="Bold" FontSize="Large" HorizontalOptions="Center" Margin="0,20,0,20" />
        <Label Text="ID: " />
        <Label x:Name="ProductIdLabel" />
        <Label Text="Product Name: " />
        <Label x:Name="ProductNameLabel" />
        <Label Text="Price: " />
        <Label x:Name="ProductPriceLabel" />
        <Label Text="Code: " />
        <Label x:Name="ProductCodeLabel" />

        <!-- Update Button -->
        <Button Text="Update" Clicked="Button_Clicked_Update" />

        <!-- Delete Button -->
        <Button Text="Delete" Clicked="Button_Clicked_Delete" />
    </StackLayout>
</ContentView>


<!-- Update Button --><!--
<Button Text="Update" Command="{Binding UpdateCommand}" IsVisible="{Binding IsUpdateMode}" />

--><!-- Delete Button --><!--
<Button Text="Delete" Command="{Binding DeleteCommand}" IsVisible="{Binding IsDeleteMode}" />-->